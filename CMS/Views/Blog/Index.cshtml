@model IEnumerable<CMS.Models.Blog>

@{
    ViewData["Title"] = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<br />


<h2>All Blogs
           <a asp-action="Create" class="ui-button">Create New</a>
</h2>

<hr />

<table class="table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                <h4>Blog Title</h4>
            </th>
            <th>
                <h4>Created On</h4>
            </th>
            <th>
                <h4>Written By</h4>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <h2 style="font-family:'Bodoni MT'; font-size:18px">@Html.DisplayFor(modelItem => item.Name)</h2>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByFullName)
                </td>

                <td>
                    @Html.ActionLink("Select", "Blog", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>



